<div id="sms-form">
<h2>Sign up as a new user</h2>
<% @user.password = @user.password_confirmation = nil %>

<% form_for :user, :url => users_path do |f| -%>
  <fieldset>
    <%= f.error_messages :header_message => '',  :message => 'We had problems creating your account' %>
    <p>
      <%= label_tag 'email' %>
      <%= f.text_field :email, :maxlength => 55 %>
      <br />
      <em>test@test.com</em>
    </p>

    <p>
      <%= label_tag 'password' %>
      <%= f.password_field :password %>
      <br />
      <em>minimum of 6 characters</em>
    </p>

    <p><%= label_tag 'password_confirmation', 'Confirm Password' %>
      <%= f.password_field :password_confirmation %></p>

    <p><%= submit_tag 'Sign up' %></p>
  </fieldset>
<% end -%>
</div>
