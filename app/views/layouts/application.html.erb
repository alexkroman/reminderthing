<body id="doc2" class="yui-skin-sam">
  <div class="hd yui-g" style="padding: 5px; margin-bottom: 20px; border-bottom: 2px solid #777;background-color: #DDF5F5;" >
    <div class="yui-u first">
      <span style="font-size: 200%;">text<b>remind</b>me</span>
      send reminders to any phone or email
    </div>
      <div  style="float:right;margin-right:15px;">
        <% unless logged_in? %>
          <%= link_to 'Login', login_path %> or <%= link_to '<b>Create an account</b>', signup_path %>
        <% else %>
          <%= link_to 'Sign Out', logout_path  %>

        <% end %>
      </div>
  </div>

  <div class="bd">
    <%= yield %>
  </div>
</body>
</html>
